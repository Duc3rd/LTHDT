<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.btllthdt.controller.HelloController">
    <!-- Menu dọc bên trái -->
    <VBox alignment="TOP_LEFT" spacing="10.0" style="-fx-background-color: #1A1A2E; -fx-padding: 10;">
        <Button onAction="#onHome" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Trang chủ" />
        <Button onAction="#onManageStudents" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Quản lý học viên" />
        <Button onAction="#onManageCourses" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Quản lý khóa học" />
        <Button onAction="#onStatistics" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Quản lý học phí" />
        <Button onAction="#onLogout" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Lịch sử khóa học" />
    </VBox>

    <!-- Nội dung chính -->
    <VBox alignment="CENTER" prefHeight="398.0" prefWidth="686.0" spacing="10.0">
        <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
        </padding>


        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Quản lý sinh viên" />
        <HBox prefHeight="43.0" prefWidth="587.0" spacing="10">
            <Button alignment="TOP_RIGHT" text="Tìm kiếm" />
            <TextField promptText="Tìm kiếm" />
        </HBox>


        <!-- Hiển thị danh sách học viên với phân trang -->
        <TableView fx:id="studentTable" prefHeight="409.0" prefWidth="646.0">
            <columns>
                <TableColumn fx:id="colStudentName" prefWidth="150.0" text="Tên học viên" />
                <TableColumn fx:id="colStudentID" prefWidth="100.0" text="Mã học viên" />
                <TableColumn fx:id="colStudentClass" prefWidth="100.0" text="Lớp học" />
                <TableColumn fx:id="colStudentDob" prefWidth="100.0" text="Ngày sinh" />
                <TableColumn fx:id="colStudentHometown" prefWidth="100.0" text="Quê quán" />
                <TableColumn fx:id="colStudentCouse" prefWidth="100.0" text="Khóa học" />

            </columns>
        </TableView>



    </VBox>
</HBox>
