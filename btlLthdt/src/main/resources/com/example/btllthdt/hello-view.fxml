<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.btllthdt.controller.HelloController">
    <!-- Menu dọc bên trái -->
    <VBox alignment="TOP_LEFT" spacing="10.0" style="-fx-background-color: #1A1A2E; -fx-padding: 10;">
        <Button text="Trang chủ" onAction="#onHome" style="-fx-background-color: transparent; -fx-text-fill: white;" />
        <Button text="Quản lý học viên" onAction="#onManageStudents" style="-fx-background-color: transparent; -fx-text-fill: white;" />
        <Button text="Quản lý khóa học" onAction="#onManageCourses" style="-fx-background-color: transparent; -fx-text-fill: white;" />
        <Button text="Quản lý học phí" onAction="#onStatistics" style="-fx-background-color: transparent; -fx-text-fill: white;" />
        <Button text="Lịch sử khóa học" onAction="#onLogout" style="-fx-background-color: transparent; -fx-text-fill: white;" />
    </VBox>

    <!-- Nội dung chính -->
    <VBox alignment="CENTER" spacing="10.0">
        <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <!-- Title -->
        <Label text="HỆ THỐNG QUẢN LÝ TRUNG TÂM DẠY HỌC" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <!-- Form nhập và chỉnh sửa thông tin học viên -->
        <HBox spacing="10.0" alignment="CENTER">
            <Label text="Tên sinh viên:" />
            <TextField fx:id="studentName" promptText="Nhập tên sinh viên" />

            <Label text="Mã sinh viên:" />
            <TextField fx:id="studentID" promptText="Nhập mã sinh viên" />

            <Label text="Khóa học:" />
            <TextField fx:id="studentClass" promptText="Nhập khóa học" />
        </HBox>

        <!-- Ngày sinh và quê quán trên cùng một dòng -->
        <HBox spacing="10.0" alignment="CENTER">
            <Label text="Ngày sinh:" />
            <DatePicker fx:id="studentDob" />

            <Label text="Quê quán:" />
            <TextField fx:id="studentHometown" promptText="Nhập quê quán" />
        </HBox>

        <!-- Button thêm và sửa học viên -->
        <HBox spacing="10.0" alignment="CENTER">
            <Button text="Thêm học viên" onAction="#onAddStudent" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
            <Button text="Sửa học viên" onAction="#onEditStudent" style="-fx-background-color: #FFC107; -fx-text-fill: white;" />
        </HBox>

        <!-- Tìm kiếm học viên -->
        <HBox spacing="10.0" alignment="CENTER">
            <Label text="Tìm kiếm học viên:" />
            <TextField fx:id="searchField" promptText="Nhập mã hoặc tên học viên" />
            <Button text="Tìm kiếm" onAction="#onSearchStudent" />
        </HBox>

        <!-- Hiển thị danh sách học viên với phân trang -->
        <TableView fx:id="studentTable" prefHeight="200.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="colStudentName" text="Tên học viên" prefWidth="150.0" />
                <TableColumn fx:id="colStudentID" text="Mã học viên" prefWidth="150.0" />
                <TableColumn fx:id="colStudentClass" text="Khóa học" prefWidth="100.0" />
                <TableColumn fx:id="colStudentDob" text="Ngày sinh" prefWidth="150.0" />
                <TableColumn fx:id="colStudentHometown" text="Quê quán" prefWidth="150.0" />
            </columns>
        </TableView>



    </VBox>
</HBox>
